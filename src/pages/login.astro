---
import FirebaseAuth from "../components/organisms/firebaseAuth";
import firebase from "firebase/compat/app";
import MainLayout from "../layouts/MainLayout.astro";

import heroImg from "/assets/Logo.png";
const firebaseConfig = {
  apiKey: process.env.PUBLIC_FIREBASE_API_KEY,
  authDomain: process.env.PUBLIC_FIREBASE_AUTH_DOMAIN,
  projectId: process.env.PUBLIC_FIREBASE_PROJECT_ID,
  storageBucket: process.env.PUBLIC_FIREBASE_STORAGE_BUCKET,
  messagingSenderId: process.env.PUBLIC_FIREBASE_MESSAGING_SENDER_ID,
  appId: process.env.PUBLIC_FIREBASE_APPLICATION_ID,
  measurementId: process.env.PUBLIC_FIREBASE_MEASUREMENT_ID,
};
---

<MainLayout title="Yorkshire Inn" heroImgPath={heroImg}>
  <FirebaseAuth client:only="react" config={firebaseConfig} />
</MainLayout>

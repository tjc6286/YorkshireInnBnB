---
import MainLayout from "../../layouts/MainLayout.astro";
import heroImg from "/assets/Logo.png";
const { tempBookingId } = Astro.params;
import CustomerInformationForm from "../../components/organisms/customerInformationForm";
import { getInProcessBookingByID } from "../../lib/bookings";

try {
  bookingInfo = await removeTempBookingAndHoldDates(tempBookingId);
} catch (error) {
  console.log(error);
  Astro.redirect("/404");
}
---

<MainLayout
  title="Yorkshire Inn - Booking"
  activePage="about"
  heroImgPath="/assets/Logo.png"
>
  <div class="flex flex-col items-center justify-center h-screen bg-gray-50">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-bold mb-4">Booking Confirmed!</h2>
      <p class="text-gray-600 mb-4">
        Something went wrong with the booking process!
      </p>
      <p class="text-gray-600 mb-4">Please try again!</p>
    </div>
  </div>
</MainLayout>

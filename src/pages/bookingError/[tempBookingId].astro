---
import MainLayout from "../../layouts/MainLayout.astro";
const { tempBookingId } = Astro.params;
import { removeTempBookingAndHoldDates } from "../../lib/bookings";

try {
  removeTempBookingAndHoldDates(tempBookingId!);
} catch (error) {
  console.log(error);
  Astro.redirect("/404");
}
---

<MainLayout
  title="Yorkshire Inn - Booking"
  activePage="about"
  heroImgPath="/assets/Logo.png"
>
  <div class="flex flex-col items-center justify-center h-screen bg-gray-50">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-8">
      <h2 class="text-2xl font-bold mb-4">Uh oh! Something went wrong!</h2>
      <p class="text-gray-600 mb-4">
        Something went wrong with the booking process!
      </p>
      <p class="text-gray-600 mb-4">Please try again!</p>
      <div class="flex justify-end">
        <a
          href="/"
          class="px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-700"
          >Go Home
        </a>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  /**
   * HAMBURGER Menu Logic for Mobile menu
   */
  var navBtn = document.getElementById("nav_btn");
  var menu = document.getElementById("navbar-mobile");
  var mobile_nav = document.getElementsByClassName("mobile-nav");
  navBtn?.addEventListener("click", () => {
    menu?.classList.toggle("scale-y-0");
    menu?.classList.toggle("scale-y-100");
  });

  //add event listener to all to all mobile_nav elements to close the menu
  for (var i = 0; i < mobile_nav.length; i++) {
    mobile_nav[i].addEventListener("click", () => {
      menu?.classList.toggle("scale-y-0");
      menu?.classList.toggle("scale-y-100");
    });
  }
</script>

<style is:global>
  #canvas {
    display: block;
    margin: 0 auto;
    position: fixed;
    z-index: -100;
    background-color: #081710;
    height: 100%;
  }
  /* *************************************** */
  /* GLOBAL LOADING ANIMATION FOR ALL PAGES */
  /* *************************************** */
  .load {
    animation-duration: 2s;
    animation-name: fade-in-load;
    animation-timing-function: cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  @keyframes fade-in-load {
    from {
      opacity: 0;
      transform: translateY(100px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

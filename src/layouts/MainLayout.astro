---
/**
 * MainLayout.astro
 *
 * Wrapper layout with meta data and global page functionality.
 *
 * Funtionality:
 * - Nav-bar active page link
 * - Mobile nav-bar toggle
 * - Page load animation
 * - Background canvas animation logic and html elem
 */

//COMPONENT PROPS
const { title, activePage, heroImgPath } = Astro.props;

//STYLES FOR NAV ITEMS
let activeNavCss =
  "mobile-nav block py-2 pl-3 pr-4 text-black bg-white rounded md:bg-transparent md:text-[#3BA576] md:p-0";
let navCSS =

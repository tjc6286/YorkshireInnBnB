//STYLES REFERENCE VARIABLE
var homeCSS = "";
var amenitiesCSS = "";
var reviewsCSS = "";
var roomsCSS = "";
var galleryCSS = "";
var contactCSS = "";

// Apply the styles to navigation elements | apply different active style to active page.
if (activePage === "home") {
  homeCSS = navCSS;
  amenitiesCSS = navCSS;
  reviewsCSS = navCSS;
  roomsCSS = navCSS;
  galleryCSS = navCSS;
  contactCSS = navCSS;
} else if (activePage === "amenities") {
  homeCSS = navCSS;
  amenitiesCSS = activeNavCss;
  reviewsCSS = navCSS;
  roomsCSS = navCSS;
  galleryCSS = navCSS;
  contactCSS = navCSS;
} else if (activePage === "reviews") {
  homeCSS = navCSS;
  amenitiesCSS = navCSS;
  reviewsCSS = activeNavCss;
  roomsCSS = navCSS;
  galleryCSS = navCSS;
  contactCSS = navCSS;
} else if (activePage === "rooms") {
  homeCSS = navCSS;
  amenitiesCSS = navCSS;
  reviewsCSS = navCSS;
  roomsCSS = activeNavCss;
  galleryCSS = navCSS;
  contactCSS = navCSS;
} else if (activePage === "gallery") {
  homeCSS = navCSS;
  amenitiesCSS = navCSS;
  reviewsCSS = navCSS;
  roomsCSS = navCSS;
  galleryCSS = activeNavCss;
  contactCSS = navCSS;
} else if (activePage === "contact") {
  homeCSS = navCSS;
  amenitiesCSS = navCSS;
  reviewsCSS = navCSS;
  roomsCSS = navCSS;
  galleryCSS = navCSS;
  contactCSS = activeNavCss;
}
